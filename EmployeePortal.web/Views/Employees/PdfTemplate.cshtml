@model List<EmployeePortal.Models.Employee>

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial;
            font-size: 12px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid black;
            padding: 5px;
            text-align: left;
        }
    </style>
</head>
<body>
    <h2>Employee List</h2>
    <table>
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Department</th>
                <th>Position</th>
                <th>Salary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.FullName</td>
                    <td>@emp.Email</td>
                    <td>@emp.Department</td>
                    <td>@emp.Position</td>
                    <td>@emp.Salary.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
