@model EmployeePortal.ViewModels.AdminProfileViewModel
@{
    ViewData["Title"] = "Admin Profile";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Admin Profile</h2>

    <div class="card shadow-lg border-0 mx-auto" style="max-width: 500px;">
        <div class="card-body text-center">
            @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
            {
                <img src="@Model.ProfileImagePath" class="rounded-circle shadow mb-3" style="width: 100px; height: 100px;" alt="Profile Image" />
            }
            else
            {
                <div class="bg-secondary rounded-circle d-inline-block mb-3" style="width: 100px; height: 100px; line-height: 100px; color: white; font-size: 24px;">
                    <i class="bi bi-person"></i>
                </div>
            }

            <h4 class="card-title">@Model.FullName</h4>
            <p class="text-muted mb-1"><strong>Username:</strong> @Model.Username</p>
            <p class="text-muted mb-1"><strong>Role:</strong> @Model.Role</p>

            <div class="mt-4">
                <a asp-action="EditAdminProfile" class="btn btn-outline-primary px-4">Edit Profile</a>
            </div>
        </div>
    </div>
</div>
