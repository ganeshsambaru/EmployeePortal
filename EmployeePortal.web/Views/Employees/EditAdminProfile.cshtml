@model EmployeePortal.ViewModels.AdminProfileViewModel

@{
    ViewData["Title"] = "Edit Admin Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0 text-center">Edit Admin Profile</h4>
                </div>
                <div class="card-body">
                    <form asp-action="EditAdmin" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Username</label>
                            <input asp-for="Username" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Role" class="form-label">Role</label>
                            <input asp-for="Role" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">Full Name</label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Profile Picture</label><br />
                            @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
                            {
                                <img src="@Model.ProfileImagePath" alt="Profile" class="rounded-circle mb-2 shadow" width="100" height="100" />
                            }
                            <input asp-for="ProfileImage" type="file" class="form-control" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">Save Changes</button>
                            <a asp-action="Profile" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
