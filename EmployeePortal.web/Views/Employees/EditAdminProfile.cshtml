@model EmployeePortal.ViewModels.AdminProfileViewModel

@{
    ViewData["Title"] = "Edit Admin Profile";
}

<h2>Edit Profile</h2>

<form asp-action="EditAdmin" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Username" class="form-label"></label>
        <input asp-for="Username" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="Role" class="form-label"></label>
        <input asp-for="Role" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="FullName" class="form-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Profile Picture</label><br />
        @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
        {
            <img src="@Model.ProfileImagePath" alt="Profile" class="rounded mb-2" width="100" />
        }
        <input asp-for="ProfileImage" type="file" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Profile" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
