@model EmployeePortal.ViewModels.EmployeeDetailsViewModel
@{
    ViewData["Title"] = "Employee Details";
}

<div class="card shadow border-0">
    <div class="card-header bg-primary text-white">
        <h4><i class="bi bi-person-circle"></i> Employee Details</h4>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <strong>👤 Full Name:</strong>
                <div class="text-muted">@Model.FullName</div>
            </div>
            <div class="col-md-6">
                <strong>📧 Email:</strong>
                <div class="text-muted">@Model.Email</div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <strong>🏢 Position:</strong>
                <div class="text-muted">@Model.Position</div>
            </div>
            <div class="col-md-6">
                <strong>📂 Department:</strong>
                <div class="text-muted">@Model.Department</div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <strong>📅 Hire Date:</strong>
                <div class="text-muted">@Model.HireDate.ToShortDateString()</div>
            </div>
            <div class="col-md-6">
                <strong>🎂 Date of Birth:</strong>
                <div class="text-muted">@Model.DateOfBirth.ToShortDateString()</div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <strong>🚻 Gender:</strong>
                <div class="text-muted">@Model.Gender</div>
            </div>
            <div class="col-md-6">
                <strong>🧾 Employee Type:</strong>
                <div class="text-muted">@Model.EmployeeType</div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <strong>💰 Salary:</strong>
                <div class="text-muted">@Model.Salary.ToString("C")</div>
            </div>
        </div>

        <div class="d-flex justify-content-start gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                <i class="bi bi-trash3"></i> Delete
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>
        </div>
    </div>
</div>
