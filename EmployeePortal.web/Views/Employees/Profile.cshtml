@model EmployeePortal.Models.Employee

@{
    ViewData["Title"] = "My Profile";
}

<h2 class="text-center my-4">My Profile</h2>

<div class="card shadow p-4 mx-auto" style="max-width: 700px;">
    <div class="text-center mb-4">
        @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
        {
            <img src="@Model.ProfileImagePath" alt="Profile Picture" class="rounded-circle shadow" style="width: 150px; height: 150px; object-fit: cover;" />
        }
        else
        {
            <i class="bi bi-person-circle display-1 text-secondary"></i>
        }
        <h4 class="mt-3">@Model.FullName</h4>
        <span class="text-muted">@Model.Position</span>
    </div>

    <hr />

    <div class="row">
        <div class="col-sm-6 mb-3">
            <strong>Email:</strong><br />
            <span>@Model.Email</span>
        </div>
        <div class="col-sm-6 mb-3">
            <strong>Department:</strong><br />
            <span>@Model.Department</span>
        </div>
        <div class="col-sm-6 mb-3">
            <strong>Gender:</strong><br />
            <span>@Model.Gender</span>
        </div>
        <div class="col-sm-6 mb-3">
            <strong>Employee Type:</strong><br />
            <span>@Model.EmployeeType</span>
        </div>
        <div class="col-sm-6 mb-3">
            <strong>Date of Birth:</strong><br />
            <span>@Model.DateOfBirth.ToString("dd MMM yyyy")</span>
        </div>
        <div class="col-sm-6 mb-3">
            <strong>Hire Date:</strong><br />
            <span>@Model.HireDate.ToString("dd MMM yyyy")</span>
        </div>
        <div class="col-sm-6 mb-3">
            <strong>Salary:</strong><br />
            <span>₹@Model.Salary.ToString("N2")</span>
        </div>
    </div>
</div>
