@model EmployeePortal.ViewModels.EmployeeEditViewModel

<h2>Edit Employee</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mt-2">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label asp-for="Position"></label>
        <input asp-for="Position" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label asp-for="Department"></label>
        <input asp-for="Department" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label asp-for="HireDate"></label>
        <input asp-for="HireDate" type="date" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" type="date" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label asp-for="Gender"></label>
        <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<EmployeePortal.Models.Gender>()"></select>
    </div>

    <div class="form-group mt-2">
        <label asp-for="EmployeeType"></label>
        <select asp-for="EmployeeType" class="form-control" asp-items="Html.GetEnumSelectList<EmployeePortal.Models.EmployeeType>()"></select>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Salary"></label>
        <input asp-for="Salary" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label asp-for="ProfileImage" class="form-label">Profile Photo</label>
        <input asp-for="ProfileImage" type="file" class="form-control" />
        @if (!string.IsNullOrEmpty(Model?.ProfileImagePath))
        {
            <img src="@Model.ProfileImagePath" class="mt-2 rounded" style="height: 80px;" />
        }
    </div>

    <div class="mt-2">
        <button class="btn btn-primary">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
    
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
