@model EmployeePortal.Models.Employee

@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="card shadow-sm border-0 mt-4">
    <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="bi bi-trash-fill"></i> Confirm Delete</h4>
    </div>

    <div class="card-body">
        <div class="alert alert-danger text-center fs-5">
            Are you sure you want to delete <strong>@Model.FullName</strong>?
        </div>

        <div class="table-responsive">
            <table class="table table-bordered align-middle">
                <tbody>
                    <tr>
                        <th>Email</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Department</th>
                        <td>@Model.Department</td>
                    </tr>
                    <tr>
                        <th>Position</th>
                        <td>@Model.Position</td>
                    </tr>
                    <tr>
                        <th>Salary</th>
                        <td>@Model.Salary.ToString("C")</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <form asp-action="Delete" method="post" class="d-flex gap-2 mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash3-fill"></i> Yes, Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Cancel
            </a>
        </form>
    </div>
</div>
