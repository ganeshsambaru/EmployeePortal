@{
    ViewData["Title"] = "Home";
    var isAdmin = User.IsInRole("Admin");
    var isAuthenticated = User.Identity.IsAuthenticated;
}

<style>
    body {
        background-image: url('https://t3.ftcdn.net/jpg/02/11/09/58/240_F_211095871_r74aavHAmiLk8xeCuL3SBfnOivgsj0ZQ.jpg'); /* Change to your actual path */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        margin: 0;
        color: white;
    }

    .content-center {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
    }

        .content-center h1 {
            font-size: 3rem;
            font-weight: bold;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px #000;
        }

        .content-center p {
            font-size: 1.2rem;
            margin-bottom: 25px;
            text-shadow: 1px 1px 3px #000;
        }

        .content-center a.btn {
            margin: 0 10px;
            padding: 10px 25px;
        }
</style>

<div class="content-center">
    <h1>👋 Welcome Employee Portal</h1>
    <p>Manage your workforce efficiently.</p>

    @if (!isAuthenticated)
    {
        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light">Login</a>
        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light">Register</a>
    }
    else
    {
        <a asp-controller="Employees" asp-action="Index" class="btn btn-primary">Employee List</a>

        @if (isAdmin)
        {
            <a asp-controller="Employees" asp-action="Dashboard" class="btn btn-warning text-dark">Admin Dashboard</a>
        }
    }
</div>
