@model EmployeePortal.ViewModels.LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Employee Portal</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background: url('https://images.hdqwalls.com/wallpapers/macos-rancho-cucamonga-tree-cm.jpg') no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .page-title {
            color: white;
            font-size: 36px;
            font-weight: bold;
            margin-bottom: 30px;
            text-shadow: 1px 1px 4px rgba(0,0,0,0.6);
        }

        .login-box {
            background-color: rgba(255, 255, 255, 0.95);
            padding: 40px;
            border-radius: 15px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.3);
        }

            .login-box h2 {
                text-align: center;
                margin-bottom: 25px;
                color: #333;
            }

        .form-control {
            width: 100%;
            padding: 10px 15px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 30px;
        }

        .btn-login {
            width: 100%;
            padding: 10px;
            border-radius: 30px;
            background: #007bff;
            color: white;
            font-weight: bold;
            border: none;
            cursor: pointer;
        }

            .btn-login:hover {
                background: #0056b3;
            }

        .text-center a {
            color: #007bff;
        }

        ::placeholder {
            color: #888;
        }
    </style>
</head>
<body>
    <div class="page-title">Welcome To EmployeePortal</div>

    <div class="login-box">
        <h2>Login</h2>
        <form asp-action="Login" method="post">
            <input asp-for="Username" class="form-control" placeholder="Username" />
            <span asp-validation-for="Username" class="text-danger"></span>

            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>

            <button type="submit" class="btn-login">Login</button>

            <div class="text-center mt-3">
                <span>Don't have an account? <a asp-action="Register">Register</a></span>
            </div>
        </form>
    </div>
</body>
</html>
